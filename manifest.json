{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "version": "0.1",

  "default_locale": "en",

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0",
      "id": "youtube_stream_highlighter@example.com"
    }
  },

  "description": "__MSG_extensionDescription__",

  "icons": {
    "128": "youtube_stream_highlight.svg"
  },

  "options_ui": {
    "page": "settings/settings.html",
    "browser_style": true
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.youtube.com/live_chat_replay*"],
      "all_frames": true,
      "js": ["separator.js", "youtube_stream_highlight.js"],
      "css": ["youtube_stream_highlight.css"],
      "run_at": "document_idle"
    }
  ],

  "permissions": ["storage"]

}
